{
	"include": [
		"src/**/*.ts",
		"bin/*.ts"
	],
	"exclude": [
		"src/**/*.spec.ts"
	],
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2020",
		"typeRoots": [
			"./node_modules/@types",
		],
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"outDir": ".build",
		"lib": [
			"es2020"
		]
	},
	"preserveConstEnums": true,
	"strictNullChecks": true,
	"skipLibCheck": true,
	"sourceMap": true,
	"target": "ES2020",
	"outDir": ".build",
	"lib": [
		"es2020"
	],
	"moduleResolution": "node"
}